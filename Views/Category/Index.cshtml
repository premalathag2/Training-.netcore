
@model IEnumerable<Category>

<div class="= "container">
    

    <div class="row mt-4 mb-2 ">
        <div class= "col-md-6">
            <h2>Categories Dashboard</h2>
        </div>

        <div class="col-md-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Create Category</a>
        </div>

    </div>
   <partial name ="_Notification"/>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Order Of Display</th>

                <th>Created Date</th>

                <th>Action</th>
                <th></th>
            </tr>
</thead>
<tbody>
    @foreach (var item in Model.Select((value, index)=> new {index,value})){

    
      <tr>
          <td>@item.value.Name</td>
          <td>@item.value.OrderOfDisplay</td>
          <td>@item.value.CreatedDate</td>
          <td>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.value.Id" class="btn btn-sm btn-secondary"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.value.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
          </td>
      </tr>   
    }

  
</tbody>
    </table>
</div>